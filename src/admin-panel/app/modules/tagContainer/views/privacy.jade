include ../../../views/_mixins

div(ng-controller="clearcode.tm.tagContainer.PrivacyController as privacyCtrl", cg-busy="{promise: privacyCtrl.privacyPromise, templateUrl: \"app/views/loader.html\"}")
    .panel-body
        .row
            .col-lg-8
                .form-group
                    .alert.alert-info
                        span(translate="Embedding the Opt-out snippet in your website(s) html markup helps you to respect visitors privacy.")
                        br
                        span(translate="To ensure correct behavior, remember to put it inside your page &lt;body&gt;.")
                        br
                        br
                        span(translate="Please be aware the user-facing message generated by the opt-out code will be displayed in English.")
            .col-lg-8.col-md-12.col-sm-12
                +field_textarea(
                FORM_NAME,
                "privacyCtrl.code",
                "privacyOptoutCode",
                "{{'Opt-out code'|translate}}",
                null,
                "{{'During tag edition in \"Advanced settings\" section you can specify, if the tag should be turned off. Just select \"Respect visitors privacy\".'|translate}}"
                )(
                rows="10",
                readonly,
                cc-clipboard
                )
            .col-lg-4
                // Place for help
